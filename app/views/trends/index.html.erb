<div class="container-fluid">
<table class="table">
	<tr>
		<th><h3><%= @date %></h3></th>
	</tr>

<% @trends.each do |trend| %>
	<% if trend.tweets.count > 0 %>
		<tr>
			<td><b><%= trend.name %></b></td>
			<td><%= trend.created_at.in_time_zone("EST").strftime('%l'':''%M'' ''%p')%></td>
		</tr>
		<% x = 0 %>
		<% while x < 3 %>
			<% if trend.tweets[x] %>
			<% trend.tweets[x] %>
				<tr>
					<td><span class="screen_name">@<%= trend.tweets[x].screen_name %></span>: <%= trend.tweets[x].text %> <%= <a href=trend.tweets[x].url>link</a> %> <%= image_tag 'bird.png' %></td>
					<td></td>
				</tr>
			<% end %>
			<% x += 1 %>
		<% end %>
	<% end %>
<% end %>
</table>
</div>