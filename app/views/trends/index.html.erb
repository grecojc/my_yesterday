<div class="container">
<table class="table">
	<tr>
		<th><h3>Trends</h3></th>
	</tr>

<% @trends.each do |trend| %>
	<tr>
		<td><%= trend.name %></td>
		<td><%= trend.created_at %></td>
	</tr>
	<% trend.tweets.each do |tweet| %>
	<tr>
		<td><%= tweet.text %></td>
		<td><%= tweet.screen_name %></td>
	</tr>
	<% end %>
<% end %>
</table>
</div>