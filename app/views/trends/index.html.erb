<div class="container-fluid">
<table class="table">
	<tr>
		<th><h3><%= @date %></h3></th>
	</tr>

<% @trends.each do |trend| %>
	<% if trend.tweets.count > 0 %>
		<tr>
			<td><b><%= trend.name %></b></td>
			<td><%= trend.created_at.in_time_zone("EST").strftime('%l'':''%M'' ''%p')%></td>
		</tr>
		<% x = 0 %>
		<% while x < 5 %>
			<% if trend.tweets[x] %>
			<% trend.tweets[x] %>
			<% handle = trend.tweets[x].screen_name %>
			<% news_source = NewsSource.find_by screen_name: "#{handle}" %>
			<% news_source_image = news_source.profile_image_url %>
				<tr>
					<td><span class="screen_name">@<%= link_to "#{trend.tweets[x].screen_name}", "https://www.twitter.com/" + "#{trend.tweets[x].screen_name}", :target => '_blank' %></span>: <span class="text"><%= link_to "#{trend.tweets[x].text}", "https://www.twitter.com/" + "#{trend.tweets[x].screen_name}" + "/" + "#{trend.tweets[x].source}", :target => '_blank' %></span>  <%= image_tag 'bird.png' %> <span class="timestamp"><%= trend.tweets[x].timestamp.to_time.ago(5 * 60 * 60).strftime('%l'':''%M'' ''%p') %></span></td>
					<td></td>
				</tr>
			<% end %>
			<% x += 1 %>
		<% end %>
	<% end %>
<% end %>
</table>
</div>